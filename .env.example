# Example environment variables for mainnet deployment
# Copy this to a local file named .env or export these variables in your shell.

# RPC URL for Ethereum mainnet (Alchemy/Infura). Keep your key secret.
MAINNET_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/<YOUR_ALCHEMY_KEY>"

# Deployer private key (DO NOT COMMIT - use env or secret manager)
DEPLOYER_PRIVATE_KEY="0x<YOUR_PRIVATE_KEY>"

# Etherscan API key for contract verification
ETHERSCAN_API_KEY="<YOUR_ETHERSCAN_API_KEY>"

# Network-specific addresses required by the deploy script
USDC_ADDRESS="0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606EB48"
PAUSER_ADDRESS="0x<YOUR_PAUSER_MULTISIG_ADDRESS>"

# Optional: deployment config
EPOCH_DURATION=86400
ORACLE_QUORUM=1

# Frontend runtime variable (if running frontend locally)
NEXT_PUBLIC_MAINNET_RPC_URL="$MAINNET_RPC_URL"
